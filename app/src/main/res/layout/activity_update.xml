<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update fixture "
        android:textAlignment="center"
        android:textSize="25sp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/titleDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="Date"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titleDate"
        android:layout_marginStart="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        />
    <TextView
        android:id="@+id/titleTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:textSize="18sp"
        android:text="Time"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp" />
    <EditText
        android:id="@+id/Time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titleTime"
        android:layout_marginStart="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp" />
    <TextView
        android:id="@+id/titleVenue"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:text="Venue"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/Venue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titleVenue"
        android:layout_marginStart="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp" />


    <TextView
        android:id="@+id/titleTeamA"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:text="Team A Name"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />
    <EditText
        android:id="@+id/TeamA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titleTeamA"
        android:layout_marginStart="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/titleIconA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="260dp"
        android:layout_marginStart="35dp"
        android:text="Team A icon"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp" />

    <Button
        android:id="@+id/TakePicA"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/titleIconA"
        android:layout_toEndOf="@+id/titleTeamA"
        android:text="Take picture"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/titleTeamA"
        android:onClick="takeA"
        />

    <Button
        android:id="@+id/ChoosePicA"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/titleIconA"
        android:layout_toEndOf="@+id/TakePicA"
        android:text="Choose from gallery"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/takePicA"
        android:onClick="chooseA"
        />

    <TextView
        android:id="@+id/titleTeamB"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:text="Team B Name"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />
    <EditText
        android:id="@+id/TeamB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titleTeamB"
        android:layout_marginStart="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/titleIconB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="360dp"
        android:layout_marginStart="35dp"
        android:text="Team B icon"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp" />

    <Button
        android:id="@+id/TakePicB"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/titleIconB"
        android:layout_toEndOf="@+id/titleTeamB"
        android:text="Take picture"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/titleTeamB"
        android:onClick="takeB"

        />

    <Button
        android:id="@+id/ChoosePicB"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/titleIconB"
        android:layout_toEndOf="@+id/TakePicB"
        android:text="Choose from gallery"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/takePicB"
        android:onClick="chooseB"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:onClick="update"
        android:text="Update fixture" />





</RelativeLayout>